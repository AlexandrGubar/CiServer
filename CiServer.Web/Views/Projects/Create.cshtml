@model CiServer.Core.Entities.Project
@{ 
    ViewData["Title"] = "Новий проєкт"; 
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Новий проєкт - CI Server</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <style>
        body { 
            background-color: #f0f2f5; 
            font-family: 'Segoe UI', sans-serif; 
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .create-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.08);
            border: none;
            overflow: hidden;
            width: 100%;
            max-width: 550px;
        }
        .card-header-custom {
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        .form-control:focus {
            box-shadow: none;
            border-color: #0d6efd;
        }
        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }
        .form-control {
            border-left: none;
            padding-left: 0;
        }
        /* Фікс для рамок інпутів */
        .input-group:focus-within {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            border-radius: 0.375rem;
        }
        .input-group:focus-within .form-control, 
        .input-group:focus-within .input-group-text {
            border-color: #86b7fe;
        }
    </style>
</head>
<body>

    <div class="create-card animate__animated animate__fadeIn">
        <div class="card-header-custom">
            <i class="bi bi-plus-circle-fill display-4 mb-2"></i>
            <h2 class="fw-bold mb-0">Створити проєкт</h2>
            <p class="opacity-75 mb-0">Додайте новий репозиторій до CI Server</p>
        </div>
        
        <div class="p-4 p-md-5">
            <form action="/Projects/Create" method="post">
                
                <div class="mb-4">
                    <label class="form-label fw-bold text-secondary text-uppercase small">Назва проєкту</label>
                    <div class="input-group input-group-lg border rounded">
                        <span class="input-group-text bg-white text-muted ps-3"><i class="bi bi-tag"></i></span>
                        <input type="text" name="Name" class="form-control border-0" placeholder="Наприклад: My Awesome App" required />
                    </div>
                </div>
                
                <div class="mb-5">
                    <label class="form-label fw-bold text-secondary text-uppercase small">Git Repository URL</label>
                    <div class="input-group input-group-lg border rounded">
                        <span class="input-group-text bg-white text-muted ps-3"><i class="bi bi-github"></i></span>
                        <input type="url" name="RepoUrl" class="form-control border-0" placeholder="https://github.com/username/repo.git" required />
                    </div>
                    <div class="form-text mt-2 ms-1">
                        <i class="bi bi-info-circle"></i> Сервер має мати доступ до цього URL.
                    </div>
                </div>

                <div class="d-grid gap-3">
                    <button type="submit" class="btn btn-primary btn-lg py-3 fw-bold shadow-sm">
                        Створити проєкт
                    </button>
                    <a href="/Projects" class="btn btn-light btn-lg py-3 text-muted">
                        Скасувати
                    </a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>